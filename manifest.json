{
    "manifest_version": 2,
    "name": "WhatsApp Privacy Monitor",
    "description": "Monitor messages sent from WhatsApp Web",
    "version": "1.0",
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "notifications",
        "https://web.whatsapp.com/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "https://web.whatsapp.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    }
}