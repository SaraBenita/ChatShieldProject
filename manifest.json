{
    "manifest_version": 3,
    "name": "WhatsApp Privacy Monitor",
    "version": "1.0",
    "description": "Monitors WhatsApp Web messages for sensitive information and alerts users",
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": ["https://web.whatsapp.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://web.whatsapp.com/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }